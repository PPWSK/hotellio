<div>
  <h1 class="text-center">List a new accommodation:</h1>
  <div class="container">
    <div class="row">
      <div class="col-sm-offset-4 col-sm-4">
        <%= simple_form_for(@accommodation, html: { class: 'form-horizontal' }) do |f| %>

          <%= f.input :title, label: "title" %>

          <%= f.input :description, label: 'add a description' %>

          <%= f.input :price, label: 'add a price' %>

          <%= f.input :type, label: 'add a type' %>

          <%= f.input :guest_number, label: 'add a guest number' %>

          <%= f.submit "List your accommodation" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
