<h1>Search:</h1>

<%= simple_form_for(@search_query, method: 'get', url:accommodations_path) do |f| %>

  <% if @search_query.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@search_query.errors.count, "error") %> prohibited this search query from being performed:
      </h2>
      <ul>
        <% @search_query.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :location, required: true %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :number_rooms %>

  <%= f.button :submit %>
<% end %>


<h1>Available:</h1><br><br>

<!-- do something if count == 0 -->

<div class="container">
  <div id="row">
    <div class="col-md-6">
      <% @accommodations.each do |a| %>
        <div id="row" class="accom-partial">
          <%= render partial: "accom", locals: { accom: a } %>
        </div>
      <%end%>
    </div>

    <div class="col-md-6">
      <div id="map" style="width: 100%; height: 600px;"></div>
      <% content_for(:after_js) do %>
        <%= javascript_tag do %>
          $(document).on('ready', function() {
            handler = Gmaps.build('Google');
            handler.buildMap({ internal: { id: 'map' } }, function(){
              markers = handler.addMarkers(<%= raw @markers.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
            });
          })
        <% end %>
      <% end %>
    </div>
  </div>
</div>


