<div id="container">
  <div class="quick-profile">
    <p>name: <%= @user.first_name %> <%= @user.last_name %></p>
    <p>birthday: <%= @user.birthdate %></p>
    <p>gender: <%= @user.gender %></p>
    <p>description: <%= @user.description %></p>
    <p>phone-number: <%= @user.phone_number %></p>
    <p>e-mail: <%= @user.account.email %></p>
  </div>
</div>

<div id="container">
  <div class="list-accommodations">
    <h2>List of accomodations:</h2>
    <p>
      <% @user.accommodations.each do |accommodation| %>
        <ul>
          <li> <%= accommodation.title %> </li>
          <li> <%= accommodation.description %> </li>
          <li> <%= accommodation.price %> </li>
          <li> <%= accommodation.type %> </li>
          <li> <%= accommodation.guest_number %> </li>
        </ul>
        <br>
        <br>
      <% end %>
    </p>
  </div>
</div>



